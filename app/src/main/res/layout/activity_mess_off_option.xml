<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/protv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:text="Meal Switch"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/protv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/protv1"
        android:layout_marginBottom="20dp"
        android:background="#212121" />

    <TextView
        android:id="@+id/datetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/protv"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:text="CHOSE A DATE "/>

    <Button
        android:id="@+id/datechooser_bttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetv"
        android:layout_marginLeft="7dp"
        android:background="@drawable/custombutton_roundsides"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:layout_weight="9.57"
        android:text="Choose Date"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:textSize="15dp" />


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/datechooser_bttn"
        android:layout_marginBottom="20dp"
        android:background="#212121" />


    <ScrollView
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/shadow_for_list_item"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/list_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="7dp"
                    android:layout_marginStart="17dp"
                    app:srcCompat="@drawable/breakfast_img" />

                <TextView
                    android:id="@+id/list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img"
                    android:layout_weight="9.57"
                    android:text="Breakfast"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/list_name_view"
                    android:layout_width="240dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/list_name"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="3dp"
                    android:background="#212121" />


                <TextView
                    android:id="@+id/list_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_name_view"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img"
                    android:layout_weight="9.57"
                    android:text="Details goes Here"
                    android:textColor="#9C27B0"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switch_breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/list_name_view"
                    android:text="ON"
                    android:checked="true"
                    android:textColor="#0F7D0F"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel1"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_for_list_item"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/list_img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="7dp"
                    android:layout_marginStart="17dp"
                    app:srcCompat="@drawable/lunch_img" />

                <TextView
                    android:id="@+id/list_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img2"
                    android:layout_weight="9.57"
                    android:text="Lunch"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/list_name_view2"
                    android:layout_width="240dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/list_name2"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="3dp"
                    android:background="#212121" />


                <TextView
                    android:id="@+id/list_desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_name_view2"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img2"
                    android:layout_weight="9.57"
                    android:text="Details goes Here"
                    android:textColor="#9C27B0"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switch_lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/list_name_view2"
                    android:text="ON"
                    android:layout_marginEnd="20dp"
                    android:checked="true"
                    android:textColor="#0F7D0F"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel2"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_for_list_item"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/list_img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="7dp"
                    android:layout_marginStart="17dp"
                    app:srcCompat="@drawable/snacks_img" />

                <TextView
                    android:id="@+id/list_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img3"
                    android:layout_weight="9.57"
                    android:text="Snacks"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/list_name_view3"
                    android:layout_width="240dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/list_name3"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="3dp"
                    android:background="#212121" />


                <TextView
                    android:id="@+id/list_desc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_name_view3"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img3"
                    android:layout_weight="9.57"
                    android:text="Details goes Here"
                    android:textColor="#9C27B0"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switch_snacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/list_name_view3"
                    android:text="ON"
                    android:layout_marginEnd="20dp"
                    android:checked="true"
                    android:textColor="#0F7D0F"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel3"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_for_list_item"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/list_img4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="7dp"
                    android:layout_marginStart="17dp"
                    app:srcCompat="@drawable/dinner_img" />

                <TextView
                    android:id="@+id/list_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img4"
                    android:layout_weight="9.57"
                    android:text="Dinner"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/list_name_view4"
                    android:layout_width="240dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/list_name4"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="3dp"
                    android:background="#212121" />


                <TextView
                    android:id="@+id/list_desc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_name_view4"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/list_img4"
                    android:layout_weight="9.57"
                    android:text="Details goes Here"
                    android:textColor="#9C27B0"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switch_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/list_name_view4"
                    android:layout_marginEnd="20dp"
                    android:text="ON"
                    android:checked="true"
                    android:textColor="#0F7D0F"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

