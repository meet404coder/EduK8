<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/protv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="12dp"
        android:text="Profile"/>

    <View
        android:id="@+id/protv"
        android:layout_below="@+id/protv1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="20dp"
        android:background="#212121"
        />

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_below="@id/protv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow_for_list_item">

    <ImageView
        android:id="@+id/list_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="7dp"
        android:layout_marginStart="17dp"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:layout_toEndOf="@+id/list_img"
        android:layout_weight="9.57"
        android:text="Name"
        android:textSize="20dp" />

    <View
        android:layout_width="240dp"
        android:id="@+id/list_name_view"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/list_name"
        android:layout_marginStart="132dp"
        android:background="#212121" />


    <TextView
        android:id="@+id/list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/list_name_view"
        android:layout_toEndOf="@+id/list_img"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_weight="9.57"
        android:textColor="#9C27B0"
        android:text="Details goes Here"
        android:textSize="15dp" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shadow_for_list_item">

        <ImageView
            android:id="@+id/list_img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:layout_marginStart="17dp"
            app:srcCompat="@drawable/creditimg" />

        <TextView
            android:id="@+id/list_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_toEndOf="@+id/list_img2"
            android:layout_weight="9.57"
            android:text="Credits"
            android:textSize="20dp" />

        <View
            android:layout_width="240dp"
            android:id="@+id/list_name_view2"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/list_name2"
            android:layout_marginStart="132dp"
            android:background="#212121" />


        <TextView
            android:visibility="gone"
            android:id="@+id/list_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/list_name_view2"
            android:layout_toEndOf="@+id/list_img2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="9.57"
            android:textColor="#9C27B0"
            android:text="Details goes Here"
            android:textSize="15dp" />

        <Button
            android:id="@+id/list_btn_creditdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/list_desc2"
            android:layout_toEndOf="@+id/list_img2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="9.57"
            android:textColor="#9C27B0"
            android:text="View Credit Details"
            android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_below="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow_for_list_item">

        <ImageView
            android:id="@+id/list_img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:layout_marginStart="17dp"
            app:srcCompat="@drawable/hostel" />

        <TextView
            android:id="@+id/list_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_toEndOf="@+id/list_img3"
            android:layout_weight="9.57"
            android:text="Hostel Name"
            android:textSize="20dp" />

        <View
            android:layout_width="240dp"
            android:id="@+id/list_name_view3"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/list_name3"
            android:layout_marginStart="132dp"
            android:background="#212121" />


        <TextView
            android:id="@+id/list_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/list_name_view3"
            android:layout_toEndOf="@+id/list_img3"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="9.57"
            android:textColor="#9C27B0"
            android:text="Details goes Here"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>
