<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vision.eduk8.QrScanningActivity">

    <RelativeLayout
        android:id="@+id/qrpreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/qrlineimgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/qr_line" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/qroverlayiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/qroverlay" />

        <TextView
            android:visibility="gone"
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qroverlayiv"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="TEXT"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alllayholder"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_below="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/shadow_for_list_item"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/list_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="7dp"
                        android:layout_marginStart="17dp"
                        app:srcCompat="@drawable/breakfast_img" />

                    <TextView
                        android:id="@+id/list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img"
                        android:layout_weight="9.57"
                        android:text="Breakfast"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/list_name_view"
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/list_name"
                        android:layout_marginStart="132dp"
                        android:layout_marginTop="3dp"
                        android:background="#212121" />


                    <CheckBox
                        android:id="@+id/list_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_name_view"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img"
                        android:layout_weight="9.57"
                        android:text="PENDING"
                        android:textColor="#9C27B0"
                        android:textSize="25dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shadow_for_list_item"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/list_img2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="7dp"
                        android:layout_marginStart="17dp"
                        app:srcCompat="@drawable/lunch_img" />

                    <TextView
                        android:id="@+id/list_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img2"
                        android:layout_weight="9.57"
                        android:text="Lunch"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/list_name_view2"
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/list_name2"
                        android:layout_marginStart="132dp"
                        android:layout_marginTop="3dp"
                        android:background="#212121" />


                    <CheckBox
                        android:id="@+id/list_desc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_name_view2"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img2"
                        android:layout_weight="9.57"
                        android:text="PENDING"
                        android:textColor="#9C27B0"
                        android:textSize="25dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel2"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shadow_for_list_item"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/list_img3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="7dp"
                        android:layout_marginStart="17dp"
                        app:srcCompat="@drawable/snacks_img" />

                    <TextView
                        android:id="@+id/list_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img3"
                        android:layout_weight="9.57"
                        android:text="Snacks"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/list_name_view3"
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/list_name3"
                        android:layout_marginStart="132dp"
                        android:layout_marginTop="3dp"
                        android:background="#212121" />


                    <CheckBox
                        android:id="@+id/list_desc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_name_view3"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img3"
                        android:layout_weight="9.57"
                        android:text="PENDING"
                        android:textColor="#9C27B0"
                        android:textSize="25dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel3"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shadow_for_list_item"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/list_img4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="7dp"
                        android:layout_marginStart="17dp"
                        app:srcCompat="@drawable/dinner_img" />

                    <TextView
                        android:id="@+id/list_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img4"
                        android:layout_weight="9.57"
                        android:text="Dinner"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/list_name_view4"
                        android:layout_width="240dp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/list_name4"
                        android:layout_marginStart="132dp"
                        android:layout_marginTop="3dp"
                        android:background="#212121" />


                    <CheckBox
                        android:id="@+id/list_desc4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_name_view4"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/list_img4"
                        android:layout_weight="9.57"
                        android:text="PENDING"
                        android:textColor="#9C27B0"
                        android:textSize="25dp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/bttn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel4"
                    android:textColor="#FFFFFF"
                    android:layout_margin="10dp"
                    android:text="CONFIRM"
                    android:background="@drawable/custombutton_roundsides"/>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
